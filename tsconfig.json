{
	"compilerOptions": {
		/* Base Options */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,

		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		/* Transpiling */
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"lib": ["es2022"]
	}
}
